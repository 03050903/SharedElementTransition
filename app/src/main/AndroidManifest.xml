<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.etiennelawlor.sharedelementtransition">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SharedElementTransition">

        <activity
            android:name=".activities.CheesesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SharedElementTransition.CheesesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.CheeseDetailsActivity"
            android:screenOrientation="portrait"
            android:label=""
            android:theme="@style/Theme.SharedElementTransition.CheeseDetailActivity">
        </activity>

    </application>

</manifest>
